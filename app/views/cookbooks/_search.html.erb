<%= form_tag cookbooks_path, :class => 'cookbook_search', method: :get do %>
  <%= search_field_tag :q, nil, placeholder: 'Search Cookbooks', autofocus: 'true', class: 'cookbook_search_textfield' %>
  <%= button_tag(type: 'submit', class: 'cookbook_search_button') do
    content_tag(:i, nil, class: 'fa fa-search')
  end %>
<% end %>
