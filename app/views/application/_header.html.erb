<header>
  <h1><%= link_to 'Opscode', root_path %></h1>

  <nav>
    <ul>
      <li>
        <%= link_to 'Contributors', icla_signatures_path %>
      </li>
      <% if logged_in? %>
        <% unless current_user.signed_icla? %>
          <li>
            <%= link_to 'Sign ICLA', new_icla_signature_path %>
          </li>
        <% end %>

        <li>
          <%= link_to 'Logout', logout_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to 'Login', login_path %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>
